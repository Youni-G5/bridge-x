{
  "$schema": "https://schema.tauri.app/config/2.0.0-beta",
  "productName": "BridgeX",
  "version": "0.1.0",
  "identifier": "com.bridgex.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "../src/index.html",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2025 BridgeX Contributors",
    "category": "Utility",
    "shortDescription": "P2P file transfer and device control",
    "longDescription": "BridgeX is a secure, privacy-focused tool for seamless file transfer, clipboard synchronization, and remote control between your PC and mobile devices. No cloud required!",
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "frameworks": [],
      "useBootstrapper": true
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "wix": {
        "language": ["en-US", "fr-FR"],
        "template": null,
        "fragmentPaths": [],
        "componentRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "skipWebviewInstall": false,
        "licenseText": null,
        "bannerPath": null,
        "dialogImagePath": null
      },
      "nsis": {
        "license": null,
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": null,
        "installMode": "perUser",
        "languages": ["English", "French"],
        "displayLanguageSelector": true,
        "compression": "lzma"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "BridgeX",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:8080; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "BridgeX"
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Youni-G5/bridge-x/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    },
    "notification": {
      "identifier": "com.bridgex.app"
    },
    "dialog": {},
    "fs": {
      "scope": ["$HOME/Downloads/*", "$HOME/Documents/*"]
    }
  }
}
