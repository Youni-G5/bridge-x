{
  "$schema": "https://schema.tauri.app/config/2.0.0-beta",
  "productName": "BridgeX",
  "version": "0.1.0",
  "identifier": "com.bridgex.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "../src/index.html",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2025 BridgeX Contributors",
    "category": "Utility",
    "shortDescription": "P2P file transfer and device control",
    "longDescription": "BridgeX is a secure, privacy-focused tool for seamless file transfer, clipboard synchronization, and remote control between your PC and mobile devices.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "BridgeX",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {}
}
