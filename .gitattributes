# Auto detect text files and perform LF normalization
* text=auto

# Rust
*.rs text eol=lf
Cargo.toml text eol=lf
Cargo.lock text eol=lf

# Dart/Flutter
*.dart text eol=lf
pubspec.yaml text eol=lf
pubspec.lock text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf

# Config
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.conf text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
*.wasm binary
